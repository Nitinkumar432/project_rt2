<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Track Jobs</title>
    <style>
        /* Add some basic styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: bold;
        }

        .job {
            display: flex;
            flex-direction: column;
            margin-bottom: 15px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }

        .job h3 {
            margin: 0;
            font-size: 20px;
        }

        .job p {
            margin: 5px 0;
        }

        .job-status {
            margin-top: 10px;
            font-weight: bold;
            color: green;
        }

        .pending-status {
            color: orange;
        }

        .recent-jobs {
            display: flex;
            flex-direction: column;
            margin-bottom: 30px;
        }

        .job-details {
            margin-bottom: 10px;
        }

        .filter-section {
            margin-bottom: 20px;
        }

        .search-bar {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        .edit-btn {
            background-color: #007bff;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        .edit-btn:hover {
            background-color: #0056b3;
        }

        .verified-section, .pending-section {
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Track Jobs</h1>

        <!-- Search Bar -->
        <input type="text" id="search-bar" class="search-bar" placeholder="Search jobs by title, location, etc." oninput="filterJobs()">

        <!-- Filter Section -->
        <div class="filter-section">
            <label for="jobStatus">Filter by Status:</label>
            <select id="jobStatus" onchange="filterJobs()">
                <option value="all">All</option>
                <option value="Verifed">Verified</option>
                <option value="Pending">Pending</option>
            </select>
        </div>

        <!-- Recent Jobs (Top 3 full details) -->
        <div class="section-title">Recent Job Posts (Top 3)</div>
        <div class="recent-jobs">
            <% jobsdata.slice(0, 3).forEach(job => { %>
                <div class="job">
                    <h3><%= job.title %></h3>
                    <p><strong>Description:</strong> <%= job.description %></p>
                    <p><strong>Salary:</strong> ₹<%= job.salary.minSalary %> - ₹<%= job.salary.maxSalary %> <%= job.salary.currency %></p>
                    <p><strong>Location:</strong> <%= job.location.city %>, <%= job.location.state %>, <%= job.location.country %></p>
                    <p><strong>Posted on:</strong> <%= new Date(job.jobPostDate).toDateString() %></p>
                    <p><strong>Status:</strong> <%= job.status %></p>
                    <button class="edit-btn" onclick="editJob('<%= job._id %>')">Edit</button>
                </div>
            <% }) %>
        </div>

        <!-- Verified Jobs Section -->
        <div class="section-title">Verified Jobs</div>
        <div class="verified-section">
            <% jobsdata.filter(job => job.status === 'Verifed').forEach(job => { %>
                <div class="job">
                    <h3><%= job.title %></h3>
                    <p><strong>Posted on:</strong> <%= new Date(job.jobPostDate).toDateString() %></p>
                    <p><strong>Applied Date:</strong> <%= new Date(job.applicationDeadline).toDateString() %></p>
                    <p><strong>Status:</strong> <span class="job-status">Verified</span></p>
                    <button class="edit-btn" onclick="editJob('<%= job._id %>')">Edit</button>
                </div>
            <% }) %>
        </div>

        <!-- Pending Jobs Section -->
        <div class="section-title">Pending Jobs</div>
        <div class="pending-section">
            <% jobsdata.filter(job => job.status === 'Pending').forEach(job => { %>
                <div class="job">
                    <h3><%= job.title %></h3>
                    <p><strong>Posted on:</strong> <%= new Date(job.jobPostDate).toDateString() %></p>
                    <p><strong>Applied Date:</strong> <%= new Date(job.applicationDeadline).toDateString() %></p>
                    <p><strong>Status:</strong> <span class="pending-status">Pending</span></p>
                    <button class="edit-btn" onclick="editJob('<%= job._id %>')">Edit</button>
                </div>
            <% }) %>
        </div>
    </div>

    <script>
        // Function to filter jobs based on search input or status
        function filterJobs() {
            const searchBar = document.getElementById('search-bar').value.toLowerCase();
            const jobStatus = document.getElementById('jobStatus').value;
            const jobs = document.querySelectorAll('.job');

            jobs.forEach(job => {
                const jobTitle = job.querySelector('h3').innerText.toLowerCase();
                const jobStatusText = job.querySelector('.job-status') || job.querySelector('.pending-status');

                if (jobTitle.includes(searchBar) && (jobStatus === 'all' || jobStatusText.innerText === jobStatus)) {
                    job.style.display = 'block';
                } else {
                    job.style.display = 'none';
                }
            });
        }

        // Function to edit job (stub)
        function editJob(jobId) {
            alert('Edit functionality for Job ID: ' + jobId);
            // You can redirect to an edit page or open a modal to edit the job
        }
    </script>
</body>
</html>
