    <div class="containers">
        <h1>Verify Companies</h1>


        <div>
            <h2 class="section-title">Pending Verification</h2>
            <% if (pendingCompanies.length > 0) { %>
                <ul>
                    <% pendingCompanies.forEach(company => { %>
                        <li class="pending">
                            <h3><%= company.companyName %></h3> 
                            <strong>Email:</strong> <%= company.contactEmail %>
                            <form action="/verify_company/approve/<%= company._id %>" method="POST">
                                <button type="submit"  class="action-button">Approve</button>
                            </form>
                            <div class="details">
                                <p><span>Phone:</span> <%= company.contactPhone %></p>
                                <p><span>Address:</span> <%= company.companyAddress %></p>
                                <p><span>Registration:</span> <%= company.companyRegistration %></p>
                                <p><span>Tax ID:</span> <%= company.taxId %></p>
                                <p><span>Industry:</span> <%= company.industry %></p>
                                <p><span>Size:</span> <%= company.companySize %></p>
                                <p><span>Website:</span> <a href="<%= company.website %>" target="_blank"><%= company.website %></a></p>
                                <p><span>Description:</span> <%= company.companyDescription %></p>
                                <p><span>Finances:</span> <%= company.finances %></p>
                                <p><span>Employees:</span> <%= company.numberOfEmployees %></p>
                                <p><span>Reference:</span> <%= company.referenceNumber %></p>
                                <p><span>Submission Time:</span> <%= company.submissionTime.toLocaleString() %></p>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>No companies pending verification.</p>
            <% } %>
        </div>

        <div>
            <h2 class="section-title">Verified Companies</h2>
            <% if (verifiedCompanies.length > 0) { %>
                <table class="verified-table">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Company Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% verifiedCompanies.forEach(company => { %>
                            <tr>
                                <td><%= company.companyName %></td>
                                <td><%= company.contactEmail %></td>
                                <td><span>Verified by:</span> <%= company.verify_by %>  <%= company.verify_time.toLocaleString() %></td>
                                <td>
                                    <button class="show-details" onclick="toggleDetails(this)">Show Details</button>
                                    <div class="details hidden">
                                        <p><span>Verified by:</span> <%= company.verify_by %></p>
                                        <p><span>Verification time:</span> <%= company.verify_time.toLocaleString() %></p>
                                        <p><span>Phone:</span> <%= company.contactPhone %></p>
                                        <p><span>Address:</span> <%= company.companyAddress %></p>
                                        <p><span>Registration:</span> <%= company.companyRegistration %></p>
                                        <p><span>Tax ID:</span> <%= company.taxId %></p>
                                        <p><span>Industry:</span> <%= company.industry %></p>
                                        <p><span>Size:</span> <%= company.companySize %></p>
                                        <p><span>Website:</span> <a href="<%= company.website %>" target="_blank"><%= company.website %></a></p>
                                        <p><span>Description:</span> <%= company.companyDescription %></p>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No verified companies.</p>
            <% } %>
        </div>
    </div>

    <script>
        function toggleDetails(button) {
            const details = button.nextElementSibling;
            if (details.classList.contains('hidden')) {
                details.classList.remove('hidden');
                details.classList.add('show');
                button.textContent = 'Hide Details';
            } else {
                details.classList.add('hidden');
                details.classList.remove('show');
                button.textContent = 'Show Details';
            }
        }
        document.querySelectorAll('.action-button').forEach(button => {
    button.addEventListener('click', function() {
      // Show the spinner
      document.getElementById('spinners').style.display = 'flex';
      
      // Simulate some delay (e.g., for form submission or navigation)
      setTimeout(function() {
        // Hide the spinner after the operation
        document.getElementById('spinners').style.display = 'none';
      }, 3000); // Replace with actual delay or logic for your action
    });
  });
  
    </script>

